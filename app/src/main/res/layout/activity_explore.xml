<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#212121"
    android:layout_height="match_parent"
    tools:context="com.example.katiebehrmann.thegreenlight.Explore">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequently Greenlighted Movies"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/first"
                android:src="@drawable/caught"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/first"
                android:textSize="16dp"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF"
                android:id="@+id/firstText"
                android:text="Many movies like Caught in the Middle feature two women, but their entire characters revolve around the plot of the man." />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/second"
                android:src="@drawable/worldnet"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/secondText"
                android:layout_toRightOf="@+id/second"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF"
                android:text="Even when films feature strong female leads, the heroine is often the sole female character in a cast of men." />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/third"
                android:src="@drawable/winkle"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/third"
                android:id="@+id/thirdText"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF"
                android:text="Nearly half of all animated, CGI, or other children's movies do not pass the Bechdel Test." />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/fourth"
                android:src="@drawable/war"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/fourth"
                android:id="@+id/fourthText"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF"
                android:text="Even as films center on women, such as Angel Investors or Carry That Weight, they are often seen as films for women only and held to a lesser standard." />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/fifth"
                android:src="@drawable/priest"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/fifth"
                android:id="@+id/fifthText"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF"
                android:text="Although some of these films pass the Bechdel Test, women may still be stereotypically portrayed: from kooky spinsters to hypersexualized beings" />
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="nowWhat"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:text="Now What?!"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</ScrollView>
